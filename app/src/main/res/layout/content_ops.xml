<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="localdomain.nader.covtunapp.OpsActivity"
    tools:showIn="@layout/app_bar_ops">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20sp"
        android:gravity="center_horizontal"
        android:text="Vous pouvez effectuer l'une des opérations suivantes:" />

    <Button
        android:id="@+id/buttonTrouver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60sp"
        android:height="100sp"
        android:text="Trouver une offre"
        android:textSize="24sp" />

    <Button
        android:id="@+id/buttonDeposer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40sp"
        android:height="100sp"
        android:text="Déposer une offre"
        android:textSize="24sp" />
</LinearLayout>