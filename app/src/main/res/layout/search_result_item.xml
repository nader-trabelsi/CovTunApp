<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent_layout_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10sp"
    android:background="@drawable/search_item_border"
    android:orientation="vertical"
    android:padding="10sp">

    <TextView
        android:id="@+id/searchItemDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20sp"
        android:gravity="left"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/searchItemVilleDepart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20sp"
        android:gravity="left"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/searchItemVilleArrivee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20sp"
        android:gravity="left"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/searchItemNbPlacesRestantes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20sp"
        android:gravity="left"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/searchItemPrix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20sp"
        android:gravity="left"
        android:textSize="18sp" />

</LinearLayout>