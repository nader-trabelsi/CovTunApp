<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="localdomain.nader.covtunapp.MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50sp"
        android:gravity="center_horizontal"
        android:text="Bienvenue à CovTun!"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30sp"
        android:text="Vous êtes déjà inscrit ?"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        tools:layout_editor_absoluteX="151dp"
        tools:layout_editor_absoluteY="64dp" />

    <EditText
        android:id="@+id/editTel"
        android:layout_width="232dp"
        android:layout_height="56sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40sp"
        android:ems="10"
        android:hint="Votre numéro de téléphone"
        android:inputType="number"
        android:textColorHint="@android:color/darker_gray"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="186dp" />

    <EditText
        android:id="@+id/editPass"
        android:layout_width="wrap_content"
        android:layout_height="56sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20sp"
        android:ems="10"
        android:hint="Votre mot de passe"
        android:inputType="textPassword"
        android:textColorHint="@android:color/darker_gray"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="260dp" />

    <Button
        android:id="@+id/buttonConnecter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20sp"
        android:width="180sp"
        android:text="Se connecter" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40sp"
        android:text="Vous êtes nouveau ?"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        tools:layout_editor_absoluteX="151dp"
        tools:layout_editor_absoluteY="64dp" />

    <Button
        android:id="@+id/buttonGoInscri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20sp"
        android:width="200sp"
        android:text="S'inscrire maintenant" />




</LinearLayout>